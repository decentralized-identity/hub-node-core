    "jasmine": "^3.1.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-ts": "^0.2.1",
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.9",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.1"
