{
  "name": "@decentralized-identity/hub-node-core",
  "version": "0.1.4",
  "description": "Node.js implementation of the Identity Hub core.",
  "repository": "https://github.com/decentralized-identity/hub-node-core",
  "license": "Apache-2.0",
  "main": "dist/index.js",
